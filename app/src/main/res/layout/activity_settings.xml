<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gray">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:layout_marginTop="13dp"
            android:text="@string/title_activity_settings"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            />



    </LinearLayout>

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multi_mode_label"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="left"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <Switch
        android:id="@+id/multiModeSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_alignRight="@+id/relativeLayout"
        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_marginBottom="10dp" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_settings"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/dark_gray"
        app:itemIconTint="@drawable/nav_menu_color_state"
        app:itemTextColor="@drawable/nav_menu_color_state"
        app:menu="@menu/settings_menu">

    </android.support.design.widget.BottomNavigationView>


</RelativeLayout>



