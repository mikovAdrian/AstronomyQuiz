<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="-1dip" android:color="#4A4A4A" />
            <gradient android:angle="-90" android:startColor="#6B6B6B" android:endColor="#4A4A4A"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="-1dip" android:color="#6B6B6B" />
            <solid android:color="#4A4A4A"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="-1dip" android:color="#4A4A4A" />
            <gradient android:angle="-90" android:startColor="#A4A4A4" android:endColor="#4A4A4A" />
        </shape>
    </item>

</selector>